
@import 'nib'

@require 'mixin/placeholder'
@require 'include/reset'
@require 'include/fonts'
@require 'include/*'



*
	margin: 0
	font-family: 'Open Sans', sans-serif;

html
	min-height: 100%

body
	background-image: linear-gradient(0, #93C6D2, #DCB48E)
	height: 100%


.icon-button
	border: none
	background-color: transparent
	color: rgba(255, 255, 255, 0.6)
	font-size: 20px
	cursor: pointer
	text-decoration: initial

	&:hover
		color: #fff

	&:focus
		outline-style: none

.font-s
	font-size: 13px

.font-m
	font-size: 16px

.font-l
	font-size: 20px

.font-xl
	font-size: 26px

.font-xxl
	font-size: 39px
