    .hour {
      width: 0;
      height: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      margin: -2px 0 -2px -25%;
      padding: 2px 0 2px 25%;
      background: rgba(0, 0, 0, 0.3);
      transform-origin: 100% 50%;
    }

    .minute {
      width: 0;
      height: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      margin: -40% -1px 0;
      padding: 40% 1px 0;
      background: rgba(0, 0, 0, 0.3);
      transform-origin: 50% 100%;
    }

    .second {
      width: 0;
      height: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      margin: -40% -.5px 0 0;
      padding: 40% .5px 0;
      background: rgba(212, 0, 0, 0.35);
      transform-origin: 50% 100%;
    }
