
.clock
    width: 140px;
    height: 140px;

    @media screen and (max-width: 632px)
      width: 120px
      height: 120px

    margin: 0 auto
    position: relative;
    border: 6px solid rgba(0, 0, 0, 0.17);
    border-radius: 50%;
    background-size: 240px 240px;
    background-repeat: no-repeat;

    .face {
      width: 100%;
      height: 100%;
    }

